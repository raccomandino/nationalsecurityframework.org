    <!-- Callback Script for Google CSE -->
    <script>
        var myWebResultsRenderedCallback = function() {
            for (var i = 0; i <= 9; i++) {
                var findMoreElement = document.getElementsByClassName("gcsc-find-more-on-google")[i];
                if (findMoreElement) {
                    findMoreElement.style.display = "none";
                }
            }
        };

        window.__gcse = window.__gcse || {};
        window.__gcse.searchCallbacks = {
            web: {
                rendered: myWebResultsRenderedCallback,
            },
        };
    </script>
